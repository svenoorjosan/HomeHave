<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="min-h-screen bg-[#0b1220]">
    <!-- starfield behind everything -->
    <div id="fx-root" class="pointer-events-none fixed inset-0 z-0"></div>

    <!-- add top gap for the nav -->
    <header class="relative z-10 mt-10 md:mt-14">
      <%- include('../partials/nav') %>
    </header>

    <!-- glass panel container -->
    <main class="relative z-10 container mx-auto rounded-2xl p-8 mt-8 max-w-6xl
                bg-white/5 backdrop-blur-xl ring-1 ring-white/10
                shadow-[0_10px_40px_rgba(0,0,0,0.35)]">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Hey Host! Here are your homes:
      </h2>

      <div class="flex flex-wrap justify-center gap-6">
        <% if (Array.isArray(registeredHomes) && registeredHomes.length) { %>
          <% registeredHomes.forEach(home=> {
            const imgSrc = (home.images && home.images.length)
            ? home.images[0] // 1st Cloudinary image
            : '/img/placeholder-house.jpg'; // fallback
            %>
            <div class="bg-white rounded-lg shadow-md …">
              <img src="<%= imgSrc %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover" />
              <!-- rest of the card -->

              <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                  <%= home.houseName %>
                </h3>

                <p class="text-gray-600 mb-2">
                  <i class="fas fa-map-marker-alt mr-2" aria-hidden="true"></i>
                  <span>
                    <%= home.location %>
                  </span>
                </p>

                <div class="flex justify-between items-center mb-3">
                  <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                      class="w-5 h-5 text-yellow-400 mr-1" aria-hidden="true">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700">
                      <%= home.rating || '—' %>
                    </span>
                  </div>
                </div>

                <div class="flex gap-3">
                  <a href="/host/edit-home/<%= home._id %>?editing=true"
                    class="px-3 py-1 rounded bg-blue-500 text-white hover:bg-blue-600">Edit</a>

                  <form action="/host/delete-home/<%= home._id %>" method="POST"
                    onsubmit="return confirm('Delete this home?')">
                    <button type="submit"
                      class="px-3 py-1 rounded bg-red-500 text-white hover:bg-red-600">Delete</button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
              <% } else { %>
                <div class="text-center text-white/80 p-10">
                  You haven’t added any homes yet.
                  <a href="/host/add-home" class="text-red-400 underline">Add one</a>.
                </div>
                <% } %>
      </div>
    </main>

    <!-- Starfield scripts (same as signup page) -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script type="text/babel" data-presets="env,react" src="/js/Starfield.jsx"></script>
  </body>

  </html>